# ---------------------------------------------------------------------------- #
#                                     setup                                    #
# ---------------------------------------------------------------------------- #
.PHONY: install
install:
	cargo install cargo-modules

# ---------------------------------------------------------------------------- #
#                                     lint                                     #
# ---------------------------------------------------------------------------- #
.PHONY: lint
lint:
	cargo clippy

.PHONY: format
format:
	cargo fmt

# ---------------------------------------------------------------------------- #
#                                     misc                                     #
# ---------------------------------------------------------------------------- #
.PHONY: modules
modules:
	cargo modules generate tree --with-types --bin create2mine
	cargo modules generate tree --with-types --lib

# ---------------------------------------------------------------------------- #
#                                      run                                     #
# ---------------------------------------------------------------------------- #
.PHONY: run
run:
	cargo run \
		0x0000000000FFe8B47B3e2130213B802212439497 \
		0x606F1045cD312093DFfA7784C1F8FA262A61832F \
		0xf6b72a0854388fbb9e0f4882001491Fe94Aa81C391Fe94Aa81C391Fe94Aa81C3 \
		4 \
		10

.PHONY: run.release
run.release:
	cargo run --release \
		0x0000000000FFe8B47B3e2130213B802212439497 \
